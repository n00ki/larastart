{
  "type": "module",
  "private": true,
  "scripts": {
    "build": "vite build",
    "build:ssr": "vite build && vite build --ssr",
    "dev": "vite",
    "format": "prettier --write resources/",
    "format:check": "prettier --check resources/",
    "check": "svelte-check resources/ --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check resources/ --tsconfig ./tsconfig.json --watch",
    "lint": "eslint . && svelte-check resources/ --tsconfig ./tsconfig.json",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {},
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.57.0",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.18",
    "lightningcss-linux-x64-gnu": "^1.31.1"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@inertiajs/svelte": "^2.3.12",
    "@laravel/vite-plugin-wayfinder": "^0.1.7",
    "@lucide/svelte": "^0.563.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/svelte": "^5.0.6",
    "@types/eslint": "^9.6.1",
    "@types/node": "^25.0.10",
    "axios": "^1.13.3",
    "bits-ui": "^2.15.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^17.2.0",
    "laravel-vite-plugin": "^2.1.0",
    "lint-staged": "^16.2.7",
    "maildev": "^2.2.1",
    "playwright": "^1.58.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "simple-git-hooks": "^2.13.1",
    "svelte": "^5.48.3",
    "svelte-check": "^4.3.5",
    "svelte-sonner": "^1.0.7",
    "svelte-transition": "^0.0.17",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ],
  "simple-git-hooks": {
    "pre-commit": "bun x lint-staged"
  },
  "lint-staged": {
    "**/*.php": [
      "./vendor/bin/pint"
    ],
    "{app,bootstrap,database,public}/**/*.php": [
      "./vendor/bin/rector"
    ],
    "app/**/*.php": [
      "./vendor/bin/phpstan analyse -c ./phpstan.neon --error-format=table"
    ],
    "resources/**/*.{js,ts,svelte,css,json,md}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  }
}
