{
  "format_on_save": "on",
  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor"],
      "formatter": {
        "external": {
          "command": "./vendor/bin/pint",
          "arguments": ["{buffer_path}", "--quiet"]
        }
      }
    },
    "JavaScript": {
      "formatter": { "language_server": { "name": "eslint" } },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports.eslint": true
      },
      "prettier": { "allowed": false }
    },
    "TypeScript": {
      "formatter": { "language_server": { "name": "eslint" } },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports.eslint": true
      },
      "prettier": { "allowed": false }
    },
    "Svelte": {
      "formatter": { "language_server": { "name": "eslint" } },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports.eslint": true
      },
      "prettier": { "allowed": false }
    },
    "JSON": {
      "language_servers": ["eslint", "!vscode-json-language-server"],
      "formatter": { "language_server": { "name": "eslint" } },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports.eslint": true
      },
      "prettier": { "allowed": false }
    },
    "CSS": {
      "language_servers": ["eslint", "!vscode-css-language-server"],
      "formatter": { "language_server": { "name": "eslint" } },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports.eslint": true
      },
      "prettier": { "allowed": false }
    }
  }
}
